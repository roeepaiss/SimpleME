<Window x:Class="SimpleME.Resources.UpdateManagerWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SimpleME.Resources"
        mc:Ignorable="d"
        Title="Update Manager" Height="150" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
            <RowDefinition Height="20"></RowDefinition>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Margin="7" HorizontalContentAlignment="Center" VerticalContentAlignment="Bottom"></Label>
        <Button x:Name="UpdateButton" Click="UpdateButton_Click" MinWidth="100px" MinHeight="30px" Width="auto" Height="auto" IsEnabled="False" VerticalAlignment="Top" HorizontalAlignment="Center" Grid.Row="1">Update</Button>
        <ProgressBar x:Name="Prog" Grid.Row="2" />
    </Grid>
</Window>
